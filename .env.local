# Local environment variables for running the app without AWS
# Copy this to .env and edit as needed (do NOT commit secrets for production)

# OpenSearch
OPENSEARCH_ENDPOINT=http://localhost:9200
OPENSEARCH_USER=
OPENSEARCH_PASS=
INDEX_NAME=records

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
AWS_REGION=us-east-1
RAW_BUCKET=raw
PROCESSED_BUCKET=processed

# MinIO server creds (used by docker-compose or manual MinIO setup)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
